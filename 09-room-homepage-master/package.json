{
  "name": "09-room-homepage-master",
  "version": "1.0.0",
  "description": "![Design preview for the Room homepage coding challenge](./design/desktop-preview.jpg)",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel \"build:css -- --watch\" \"build:js -- --watch\"",
    "build": "NODE_ENV=production npm-run-all build:*",
    "build:css": "postcss main.css --output output.css",
    "build:js": "rollup --config",
    "clean": "rm output.css js/bundle.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "autoprefixer": "^10.0.1",
    "cssnano": "^4.1.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.1.0",
    "rollup": "^2.33.0",
    "rollup-plugin-terser": "^7.0.2",
    "stimulus": "^1.1.1",
    "tailwindcss": "^1.9.4"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "stylelint-config-recommended": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo \"\n**NOTICE:** Don't forget to build files before pushing!\n\""
    }
  }
}
